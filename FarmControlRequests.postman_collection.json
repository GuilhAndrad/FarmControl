			"name": "RegisterUser",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"//11 1 1111-1111\r",
							"var ddd = _.random(10, 99)\r",
							"var numberAdictional = _.random(1,9)\r",
							"var firstForNumbers = _.random(1000, 9999)\r",
							"var lastForNumbers = _.random(1000, 9999)\r",
							"\r",
							"var phoneNumber = ddd + \" \" + numberAdictional + \" \" + firstForNumbers + \"-\" + lastForNumbers\r",
							"\r",
							"pm.environment.set(\"phoneNumber\", phoneNumber)\r",
							"\r",
							"let password = pm.variables.replaceIn('{{$randomPassword}}')\r",
							"let email = pm.variables.replaceIn('{{$randomEmail}}')\r",
							"\r",
							"postman.setGlobalVariable(\"SENHA\", password);\r",
							"postman.setGlobalVariable(\"EMAIL\", email);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Saber se a request passou\", function(){\r",
							"    pm.response.to.have.status(201);\r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.have.jsonBody(\"token\");\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"name\": \"{{$randomFullName}}\",\r\n  \"email\": \"{{EMAIL}}\",\r\n  \"password\": \"{{SENHA}}\",\r\n  \"phone\": \"{{phoneNumber}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{URL_BASE}}/user",
					"host": [
						"{{URL_BASE}}"
					],
					"path": [
						"user"
					]
				}
			},
			"response": []
